{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "whatsapp-bot/api/webhook.js",
      "use": "@vercel/node"
    },
    {
      "src": "whatsapp-bot/api/health.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/webhook",
      "dest": "/whatsapp-bot/api/webhook.js"
    },
    {
      "src": "/api/health",
      "dest": "/whatsapp-bot/api/health.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
